<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= content_for?(:title) ? yield(:title) : "Sevenpages Admin" %></title>
  <%= stylesheet_link_tag    "sevenpages/application" %>
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
  <%= javascript_include_tag "sevenpages/application" %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= controller_name %>">

<nav role="navigation">
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Pages', pages_path %></li>
  </ul>
</nav>
<%= render 'shared/flash_messages' %>
<%= yield %>
</body>
</html>